<p id="notice"><%= notice %></p>

<h4>Oenologists</h4>

<table class='table table-sm col-6'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Nationality</th>
      <th>Magazine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= oenologist.name %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.nationality %></td>
        <td>
          <ul class="fa-ul">
            <% oenologist.order_magazines.each do |magazine| %> 
              <li><i class="fa-li fas fa-briefcase"></i><%= magazine %></li>
            <% end %>
          </ul>
          
        </td>

        <td><%= link_to 'Show', oenologist %></td>
        <td><%= link_to 'Edit', edit_oenologist_path(oenologist) %></td>
        <td><%= link_to 'Destroy', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Oenologist', new_oenologist_path, class: "btn btn-primary" %>
